<?xml version="1.0" encoding="utf-8"?>
<com.ywwxhz.hoderview.NewsHotCommentItemHoderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?cardBackground"
    android:padding="10dp"
    app:mrl_rippleOverlay="true"
    tools:ignore="ContentDescription"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="38sp"
            android:layout_height="38sp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/titleColor"
            android:layout_toLeftOf="@+id/comment_more"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/comment_image"
            android:layout_toEndOf="@+id/comment_image"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/comment_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="from"
            android:textColor="?subTitleColor"
            android:textSize="12sp"
            android:layout_below="@+id/comment_name"
            android:layout_alignRight="@+id/comment_name"
            android:layout_alignEnd="@+id/comment_name"
            android:layout_marginBottom="2dp"
            android:layout_alignLeft="@+id/comment_name" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="comment"
            android:textSize="15sp"
            android:layout_below="@+id/comment_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp" />

        <TextView
            style="@style/SubText"
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:ellipsize="end"
            android:layout_below="@+id/comment_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</com.ywwxhz.hoderview.NewsHotCommentItemHoderView>